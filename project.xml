<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Pong" package="com.nc-x.pong" version="1.0.0" company="nc-x" />
	
	<!-- output -->
	<app main="Main" file="Pong" path="Bin"/>
	
	<window background="#212121" fps="60" />
	<window width="800" height="600" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="mobile" />
	<window fullscreen="true" if="mobile" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	
	<!-- assets -->
	<icon path="assets/icon.png" />
	<assets path="assets" rename="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>
